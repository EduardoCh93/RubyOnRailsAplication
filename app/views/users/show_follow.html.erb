<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <div class="username">
        <h1> <%= link_to "@#{@user.name}", @user %> </h1>
        <%= render 'follow_form' if logged_in? %>
      </div>
    </section>
    <section>
      <%= render 'follow_stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users-follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>


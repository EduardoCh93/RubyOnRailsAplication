<% provide(:title, "Home") %>

<% if logged_in? %>
<div class="col-md-3 col-md-offset-0">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= form_tag("/search", method: "get") do %>
    <%= text_field_tag(:q, "Buscar un usuario:") %>
    <%= submit_tag("Buscar!") %>
  <% end %>
</nav> </div>
<% end %>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= render 'shared/post_form' %>
    </div>
  </div>
  <% if @feed_items.try(:any?) %>
    <h3>Home</h3>
    <%= render 'shared/feed' %>
  <% end %>
<% else %>
  <div class="center">
    <h1>Welcome to the Foro</h1>

    <h2>
      This is the home page the Foro
    </h2>

  <%= link_to "Sign up now!", sign_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>


